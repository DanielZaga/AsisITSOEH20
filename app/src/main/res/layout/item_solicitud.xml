<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/btn_menublue"
        android:padding="16dp">

        <ImageView
            android:id="@+id/itemDoc_imv_genero"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/info"
            android:contentDescription="GÃ©nero" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/itemClas_txt_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre De la Clase"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/itemClas_txt_Codigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Codigo Materia: 12345"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/itemDoc_txt_Docente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Nombre del Docente"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="16dp">


                <ImageView
                    android:id="@+id/itemdoc_Negar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/negar"
                    android:contentDescription="Negar" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp">

                <ImageView
                    android:id="@+id/itemdoc_Aceptar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/aceptar"
                    android:contentDescription="Aceptar"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>