<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_generic"
    android:windowSoftInputMode="adjustResize"
    tools:context=".inicio_login"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_title"
        android:gravity="center"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="  Bienvenido  "
            android:padding="15dp"
            android:textSize="40sp"
            android:textColorHint="@color/white"
            android:gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="20dp"
        android:background="@drawable/background_contenetor"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logo"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:contentDescription="@string/logo_de_la_aplicacion"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_menublue"
            >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_grey"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/login_txt_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo"
                android:textColor="@color/black"
                android:inputType="textEmailAddress"
                android:textSize="25sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_grey"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/login_txt_contrasenia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ContraseÃ±a"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_btn_entrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/blue"
                android:text="Iniciar Sesion"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="20sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <Button
                android:id="@+id/login_btn_registrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:text="Registrarse"
                android:textSize="15dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>